<div class="nav">
    <div class="container clearfix">
        <ul>
            <% for (var item of nav) { %>
                <li><a class="<%= (curUrl == item.url) ? "curr" : "" %>" href="<%= item.url %>"><%= item.name %></a></li>
            <% } %>
        </ul>
        <div class="search">
            <form action="" method="post">
                <input type="text" name="keyword" placeholder="输入关键字按回车进行搜索" />
            </form>
        </div>
    </div>
</div>
