<div class="post-content">
    <% if (post) { %>
        <h3><%= post.title %></h3>
        <time><%= post.date %></time>
        <div><%- post.content %></div>
    <% } %>
</div>
<script>
    $(function () {
        if ($(".post-content").height() > $(".post-view").height()) {
            $(".post-view").height($(".post-content").height());
        }
    });
    $(window).on("resize", function () {
        if ($(".post-content").height() > $(".post-view").height()) {
            $(".post-view").height($(".post-content").height());
        }
    });
</script>